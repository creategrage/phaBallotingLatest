@model phaBalloting.Data.ProjectType

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(odd) {
            background-color: #27ae31;
            color: #fff;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #0f5e0e;
            color: white;
        }
</style>


<h2>Details</h2>

<div>
    <h4>UnitType</h4>
    <hr />

    <center>
        <table id="customers">
            <tr>
                <th>
                    @Html.DisplayName("Type Name")
                </th>

                <td>
                    @Html.DisplayFor(model => model.TypeName)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Description")
                </th>

                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("User Id")
                </th>

                <td>
                    @Html.DisplayFor(model => model.UserId)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Entry Date")
                </th>

                <td>
                    @Html.DisplayFor(model => model.EntryDate)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Modified By")
                </th>

                <td>
                    @Html.DisplayFor(model => model.ModifiedBy)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Modified Date")
                </th>

                <td>
                    @Html.DisplayFor(model => model.ModifiedDate)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Is Active")
                </th>

                <td>
                    @Html.DisplayFor(model => model.IsActive)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Is Deleted")
                </th>

                <td>
                    @Html.DisplayFor(model => model.IsDeleted)
                </td>
            </tr>
        </table>
    </center>
    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
