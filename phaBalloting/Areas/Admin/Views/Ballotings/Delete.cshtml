@model phaBalloting.Data.Balloting

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Balloting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Event Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>

        <dt>
            @Html.DisplayName("Name of Officer")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Member.NameOfOfficer)
        </dd>

        <dt>
            @Html.DisplayName("Project Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PojectUnit.Project.ProjectName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
