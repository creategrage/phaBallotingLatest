@{
    ViewBag.Title = "EditRole";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section breadcrumb
{
<li class="breadcrumb-item"><a href="@Url.Action("Rolelist")">Roles</li>

    <li class="breadcrumb-item active">Edit Roles</li>
}
<h2>Edit Role</h2>
@using (Html.BeginForm())
{
    Html.AntiForgeryToken();
    <label>
        Role
    </label>
    <p>
        @{
    string role = ViewBag.rolename;
        }
        @Html.TextBox("RoleName", role)
    </p>
    <input type="submit" />
}